		<script src="https://js.stripe.com/v3/"></script>
	</head>
	<body>
		<nav class="navbar navbar-default">
			<!-- Navbar content -->
			<div class="container-fluid">
				<div class="navbar-header">
					<div class="container">
				  		<a class="navbar-brand" style="color:white;" href="/bookshopper"><i class="fa fa-book fa-sm" aria-hidden="true"></i><span>&nbsp;</span>Books_Hopper</a>
					</div>			
				</div>
			
					  <ul class="nav navbar-nav navbar-right">
						<% if(!currentUser){ %> 
							<li class="nav-item"><a href="/login" style="color:white;">Login <i class="fas fa-sign-in-alt"></i> </a></li>
							<li class="nav-item"><a href="/register"style="color:white;">Sign Up  <i class="fas fa-user-plus fa-sm"></i></a></li>
						  <% }else{ %>							
							<li class="nav-item"><div class="dropdown">
								<button class="btn btn-secondary" type="button" id="dropdownMenuButton" data-toggle="dropdown" ><i class="far fa-user-circle fa-2x"style="color:white;"></i></button>
								<div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
									  
									  <a class="dropdown-item" href="#"><%=currentUser.username%></a>
									  <a class="dropdown-item" href="#"><%=currentUser.firstname%>&nbsp;<%=currentUser.lastname%></a>
									  <a class="dropdown-item" href="#"><%=currentUser.tele%></a>
									  <div class="divider"></div>
									  <a class="dropdown-item" href="/logout">Logout&nbsp;&nbsp;<span class="glyphicon glyphicon-log-out" style="font-weight:bold;"></span></a>
							  </div>
							  </div></li>
						  <%}%>
					  </ul>
				
			  </div>
		  </nav>
		  <div class="container">
				<%if(error && error.length>0){%>
					<div class="alert alert-danger alert-dismissible fade in">
						<a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
							<%=error%>
					</div>
				<%}%>
		  </div>
		  <%if(success && success.length>0){%>
		  <div class="container">
			<div class="alert alert-success alert-dismissible fade in">
				<a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
					<%=success%>
			  </div>
			  <%}%>
		  </div>
		  <%if(success2 && success2.length>0){%>
			<div class="container">
			  <div class="alert alert-success alert-dismissible fade in">
				  <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
					  <%=success2%>
				</div>
				<%}%>
			</div>
		  	
	

		 