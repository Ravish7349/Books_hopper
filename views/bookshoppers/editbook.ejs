<%- include("../partials/header") %>
<div class="container">
	<div class="row">
		<h1 style="text-align:center">
            Edit Book
		</h1>
		<div style="width:30%; margin:25px auto">
			<form action="/bookshopper/<%=book._id%>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type-="text" name="book[name]" value="<%=book.name%>">
				</div>
				<div class="form-group">
					<input class="form-control" type-="text" name="bookauthor" value="<%=book.bookauthor%>">
				</div>
				<div class="form-group">
					<input class="form-control" type-="text" name="book[description]" value="<%=book.description%>">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary">
						Submit
					</button>
				</div>
			</form>
			<a href="/bookshopper">Go Back</a>
		</div>
	</div>
</div>

<%- include("../partials/footer") %>