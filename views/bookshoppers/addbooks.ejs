<%- include("../partials/header") %>
<div class="container">
	<div class="row">
		<h1 style="text-align:center">
			Add a New Book
		</h1>
		<div style="width:30%; margin:25px auto">
			<form action="/bookshopper" method="POST"> 
				<div class="form-group">
					<input class="form-control" type-="text" name="name" placeholder="Name">
				</div>
				<div class="form-group">
					<input class="form-control" type-="text" name="bookauthor" placeholder="Book_Author">
				</div>
				<div class="form-group">
					<input class="form-control" type-="text" name="image" placeholder="image">
				</div>
				<div class="form-group">
					<input class="form-control" type-="number" name="price" placeholder="Price(MRP of Book)" min="1" step="5">
				</div>
				<div class="form-group">
					<input class="form-control" type-="text" name="description" placeholder="Description">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary">
						Submit
					</button>
				</div>
			</form>
			<a href="/bookshopper">Go Back</a>
		</div>
	</div>
</div>
<%- include("../partials/footer") %>